{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Base preset used to set up common options",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}"
      }
    },
    {
      "name": "debug",
      "description": "Preset for configuring a debug build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc",
      "description": "Preset for configuring a build with GCC",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_C_FLAGS": "-D_GNU_SOURCE -ffast-math -Wall -Wextra"
      }
    },
    {
      "name": "msvc",
      "description": "Preset for configuring a build with MSVC",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_C_FLAGS": "/D_CRT_SECURE_NO_WARNINGS /fp:fast /W4 /wd4324 /wd4334 /utf-8"
      },
      "toolset": {
        "strategy": "external",
        "value": "host=x64"
      },
      "architecture": {
        "strategy": "external",
        "value": "x64"
      }
    },
    {
      "name": "windows",
      "displayName": "Windows",
      "description": "Release configuration for Windows (MSVC x64)",
      "inherits": [
        "base",
        "msvc"
      ]
    },
    {
      "name": "windows-debug",
      "displayName": "Windows Debug",
      "description": "Debug configuration for Windows (MSVC x64)",
      "inherits": [
        "debug",
        "windows"
      ]
    },
    {
      "name": "linux",
      "displayName": "Linux",
      "description": "Release configuration for Linux (GCC)",
      "inherits": [
        "base",
        "gcc"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "description": "Base preset for common build options",
      "hidden": true,
      "configurePreset": "base",
      "inheritConfigureEnvironment": true
    },
    {
      "name": "minimal",
      "description": "Preset for a minimal build variant",
      "hidden": true,
      "targets": [
        "lua"
      ]
    },
    {
      "name": "windows",
      "displayName": "Release",
      "description": "Release build for Windows (MSVC x64)",
      "configurePreset": "windows",
      "inherits": [
        "base"
      ]
    },
    {
      "name": "windows-minimal",
      "displayName": "Minimal",
      "description": "Minimal release build for Windows (MSVC x64)",
      "inherits": [
        "minimal",
        "windows"
      ]
    },
    {
      "name": "windows-debug",
      "displayName": "Minimal Debug",
      "description": "Minimal debug build for Windows (MSVC x64)",
      "configurePreset": "windows-debug",
      "inherits": [
        "minimal",
        "windows"
      ]
    },
    {
      "name": "linux",
      "displayName": "Release",
      "description": "Release build for Linux (GCC)",
      "configurePreset": "linux",
      "inherits": [
        "base"
      ]
    },
    {
      "name": "linux-minimal",
      "displayName": "Minimal",
      "description": "Minimal release build for Linux (GCC)",
      "inherits": [
        "minimal",
        "linux"
      ]
    }
  ]
}
