{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Base preset used to set up common options",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install"
      }
    },
    {
      "name": "msvc",
      "description": "Preset for configuring a build with MSVC",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_C_FLAGS": "/D_CRT_SECURE_NO_WARNINGS /fp:fast /W4 /wd4324 /wd4334 /utf-8",
        "CMAKE_C_FLAGS_RELEASE": "/Zi",
        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "/DEBUG:FULL /INCREMENTAL:NO /OPT:REF /OPT:ICF /PDBALTPATH:%_PDB% /MANIFEST:NO",
        "CMAKE_SHARED_LINKER_FLAGS_RELEASE": "/DEBUG:FULL /INCREMENTAL:NO /OPT:REF /OPT:ICF /PDBALTPATH:%_PDB% /MANIFEST:NO"
      },
      "toolset": {
        "strategy": "external",
        "value": "host=x64"
      },
      "architecture": {
        "strategy": "external",
        "value": "x64"
      }
    },
    {
      "name": "gcc",
      "description": "Preset for configuring a build with GCC",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_C_FLAGS": "-D_GNU_SOURCE -ffast-math -Wall -Wextra"
      }
    },
    {
      "name": "clang",
      "description": "Preset for configuring a build with Clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_C_FLAGS": "-D_GNU_SOURCE -ffast-math -Wall -Wextra"
      }
    },
    {
      "name": "windows",
      "displayName": "Windows",
      "description": "Configuration for Windows using MSVC (x64)",
      "inherits": [
        "base",
        "msvc"
      ]
    },
    {
      "name": "linux",
      "displayName": "Linux",
      "description": "Configuration for Linux using GCC",
      "inherits": [
        "base",
        "gcc"
      ]
    },
    {
      "name": "macos",
      "displayName": "macOS",
      "description": "Configuration for macOS using Clang",
      "inherits": [
        "base",
        "clang"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "description": "Base preset for common build options",
      "hidden": true,
      "configurePreset": "base",
      "configuration": "Release",
      "inheritConfigureEnvironment": true
    },
    {
      "name": "windows",
      "displayName": "Release",
      "description": "Release build for Windows (MSVC x64)",
      "configurePreset": "windows",
      "inherits": [
        "base"
      ]
    },
    {
      "name": "windows-debug",
      "displayName": "Debug",
      "description": "Debug build for Windows (MSVC x64)",
      "configuration": "Debug",
      "inherits": [
        "windows"
      ]
    },
    {
      "name": "linux",
      "displayName": "Release",
      "description": "Release build for Linux (GCC)",
      "configurePreset": "linux",
      "inherits": [
        "base"
      ]
    },
    {
      "name": "linux-debug",
      "displayName": "Debug",
      "description": "Debug build for Linux (GCC)",
      "configuration": "Debug",
      "inherits": [
        "linux"
      ]
    },
    {
      "name": "macos",
      "displayName": "Release",
      "description": "Release build for macOS (Clang)",
      "configurePreset": "macos",
      "inherits": [
        "base"
      ]
    },
    {
      "name": "macos-debug",
      "displayName": "Debug",
      "description": "Debug build for macOS (Clang)",
      "configuration": "Debug",
      "inherits": [
        "macos"
      ]
    }
  ]
}
